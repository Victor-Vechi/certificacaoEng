{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["DOM", "ESNext"],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["./src"]
}